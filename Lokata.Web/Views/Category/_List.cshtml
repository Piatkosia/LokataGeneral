@model Lokata.Web.Models.CategoryModels.CategoryListViewModel


<table class="table">
    <thead>
    <tr>
        <th scope="col">Id</th>
        <th scope="col">Nazwa</th>
        <th scope="col">Wiek</th>
        <th scope="col">Niepełnosprawni</th>
        <th scope="col">Profesjonalni</th>
        <th scope="col">Kobiety</th>
        <th scope="col">Mężczyźni</th>
        <th scope="col">Akcje</th>
    </tr>
    </thead>
    <tbody>
    @if (Model.Categories.Any())
    {
        foreach (var item in Model. Categories)
        {
            <tr>
                <td scope="row">@Html.DisplayFor(modelItem => item.Id)</td>
                <td scope="row">@Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td scope="row">@Html.DisplayFor(modelItem => item.MinAgeInYears) - @Html.DisplayFor(modelItem => item.MaxAgeInYears)</td>
                <td scope="row">@Html.DisplayFor(modelItem => item.ForDisabled)</td>
                <td scope="row">@Html.DisplayFor(modelItem => item.ForProfessional)</td>
                <td scope="row">@Html.DisplayFor(modelItem => item.ForFemale)</td>
                <td scope="row">@Html.DisplayFor(modelItem => item.ForMale)</td>
                <td>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edytuj</a>
                    <a class="btn btn-sm btn-success" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="text-center" colspan="6">
                Brak kategorii
            </td>
        </tr>
    }
    </tbody>
</table>
