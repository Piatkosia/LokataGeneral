<UserControl x:Class="Lokata.DesktopUI.UserControls.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lokata.DesktopUI.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#AAFFFFFF">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Proszę czekać" Margin="5"
                       FontSize="20" Foreground="DarkGreen"/>
            <ProgressBar IsIndeterminate="True" Height="10"
                         Margin="5" Foreground="Green"
                         Background="DarkGreen"
                         BorderThickness="0"/>
        </StackPanel>
    </Grid>
</UserControl>
