<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style TargetType="TextBox" BasedOn="{StaticResource ControlBaseStyle}">
      <Setter Property="Height" Value="25"></Setter>
      <Setter Property="MinWidth" Value="120"></Setter>
      <Setter Property="FontSize" Value="15"></Setter>
      <Setter Property="Margin" Value="5"></Setter>
      <Setter Property="HorizontalAlignment" Value="Stretch"></Setter>
      <Setter Property="VerticalAlignment" Value="Center"></Setter>
        <Setter Property="Foreground" Value="{StaticResource DefaultForegroundBrush}"></Setter>
  </Style>
    <Style TargetType="PasswordBox" BasedOn="{StaticResource ControlBaseStyle}">
        <Setter Property="Background" Value="{StaticResource DefaultBackgroundBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource DefaultForegroundBrush}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DefaultBorderBrush}"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>
</ResourceDictionary>