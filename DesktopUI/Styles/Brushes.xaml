<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <SolidColorBrush x:Key="IsChangedBackgroundBrush" Color="MediumSpringGreen"/>
  <SolidColorBrush x:Key="HasErrorBackgroundBrush" Color="LightCoral"/>

  <!--Override of SystemColors for DataGrid and ComboBox selection-->
  <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#009999"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="#009999"/>
  <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}" Color="#009999"/>

  <!--Default Brushes for the FriendStorage-application-->
  <SolidColorBrush x:Key="DefaultForegroundBrush" Color="White"/>
  <SolidColorBrush x:Key="DefaultBackgroundBrush" Color="Green"/>
  <SolidColorBrush x:Key="DefaultBorderBrush" Color="GreenYellow"/>

  <SolidColorBrush x:Key="DisabledBorderBrush" Color="Gray"/>
  <SolidColorBrush x:Key="DisabledForegroundBrush" Color="Gray"/>

  <SolidColorBrush x:Key="LabelForegroundBrush" Color="#00CCCC"/>

  <SolidColorBrush x:Key="ButtonMouseOverBackgroundBrush" Color="#007777"/>
  <SolidColorBrush x:Key="ButtonIsPressedBackgroundBrush" Color="#009999"/>
  <SolidColorBrush x:Key="ButtonIsPressedBorderBrush" Color="#007777"/>
  <SolidColorBrush x:Key="ButtonMouseOverBorderBrush" Color="#007777"/>
</ResourceDictionary>